@{
    ViewData["Title"] = "Data Table";
    Layout = "_Dashboard";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Charts</h1>
    @*<p class="mb-4">
        Chart.js is a third party plugin that is used to generate the charts in this theme.
        The charts below have been customized - for further customization options, please visit the <a target="_blank" href="https://www.chartjs.org/docs/latest/">
            official Chart.js
            documentation
        </a>.
    </p>*@

    <!-- Content Row -->
    <div class="row">
        <!-- Area Chart -->
        <div class="col-xl-7 col-lg-7 mb-5">
            <div class="card shadow mb-4 h-100">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Salary</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" id="myAreaChart">
                        @*<canvas></canvas>*@
                    </div>
                    @*<hr>
                        Styling for the area chart can be found in the
                        <code>/js/demo/chart-area-demo.js</code> file.*@
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-5 col-lg-5 mb-5">
            <div class="card shadow mb-4 h-100">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Gender</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    @*<div class="chart-pie pt-4" id="myPieChart">
                            <canvas></canvas>
                        </div>*@
                    <div class="chart-pie pt-5 mt-4" id="myPieChart">
                    </div>
                    @*<hr>
                        Styling for the donut chart can be found in the
                        <code>/js/demo/chart-pie-demo.js</code> file.*@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Bar Chart -->
        <div class="col-xl-7 col-lg-7 mb-5">
            <div class="card shadow mb-4 h-100">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Degree</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar" id="myBarChart">
                        @*<canvas></canvas>*@
                    </div>
                    @*<div id="chart">
                    </div>*@
                    @*<hr>
                    Styling for the bar chart can be found in the
                    <code>/js/demo/chart-bar-demo.js</code> file.*@
                </div>
            </div>
        </div>

        <!-- Doughnut Chart -->
        <div class="col-xl-5 col-lg-5 mb-5">
            <div class="card shadow mb-4 h-100">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Role</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    @*<div class="chart-pie pt-4" id="myPieChart">
                        <canvas></canvas>
                    </div>*@
                    <div id="myDonutChart" class="chart-pie pt-5 pb-5">
                    </div>
                    @*<hr>
                    Styling for the donut chart can be found in the
                    <code>/js/demo/chart-pie-demo.js</code> file.*@
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>


@section scripts {
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <!-- Page level custom scripts -->
    <script src="~/assets/js/demo/datatables-demo.js"></script>

}
